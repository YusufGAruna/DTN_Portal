@model Aruna_DTN_Entegrasyon.ViewModels.LoginViewModel
@{
    Layout = null;
}
<html>
<body id="LoginForm">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Content/Login.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>

    <div class="container">
        <div class="login-container">
            <div id="output"></div>
            <div class=""><img style="margin:5px" src="http://dtninsaat.com/images/uploads/732bb8c3328d7c041edda0ffb1766151.png" alt="logo" height="120" width="150"></div>
            <div class="form-box">
                @using (Html.BeginForm())
                {

                    @Html.ValidationSummary(false);
                    <br />
                    <br />

                    @*<input name="user" type="text" placeholder="Kullanıcı Adı">
                        <input type="password" placeholder="Şifre">*@
                    @Html.TextBoxFor(model => model.UserName, new { @placeholder = "Kullanıcı Adı" })

                    @Html.TextBoxFor(model => model.Password, new { @placeholder = "Şifre", @type = "password" })

                    @*@Html.TextBoxFor(model => model.MagazaKodu, new { @placeholder = "Mağaza Kodu" })*@
                    <button class="btn btn-info btn-block login" type="submit">Giriş</button>
                }
            </div>
        </div>

    </div>

</body>
</html>
