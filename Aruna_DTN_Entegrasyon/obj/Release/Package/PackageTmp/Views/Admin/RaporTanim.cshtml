@using System.Data;
@model System.Data.DataTable

@{
    ViewBag.Title = "RaporTanim";
}

<h2>Rapor Tanımları</h2>

<br />
<p>
    @Html.ActionLink("Yeni Rapor Tanımı Oluştur", "RaporTanimCreate", null, new { @class = "btn btn-info" })
</p>
<br />
<br />

<table class="table">
    <tr>
        <th>
            @Html.Label("Rapor Adı")
        </th>
        <th>
            @Html.Label("View Adı")
        </th>
        <th></th>
    </tr>

    @foreach (DataRow item in Model.Rows)
    {
    <tr>
        <td>
            @item[0].ToString()
        </td>

        <td>
            @item[1].ToString()
        </td>

        <td>
            @Html.ActionLink("Düzenle", "RaporTanimEdit", new { Rapor = item[0].ToString() }, new { @class = "btn btn-success btn-sm" })



            @Html.ActionLink("Sil", "RaporTanimDelete", new { Rapor = item[0].ToString() }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
    }

</table>


