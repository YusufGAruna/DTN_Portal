@using System.Data;
@model System.Data.DataTable

@{
    ViewBag.Title = "GrupKoduTanim";
}

<h2>Grup Tanımları</h2>

<br />
<p>
    @Html.ActionLink("Yeni Grup Tanımı Oluştur", "GrupTanimCreate", null, new { @class = "btn btn-info" })
</p>
<br />
<br />

<table class="table">
    <tr>
        <th>
            @Html.Label("Grup Adı")
        </th>
        <th>
            @Html.Label("Fiyatı Kitli")
        </th>
        <th></th>
    </tr>

    @foreach (DataRow item in Model.Rows)
    {
        <tr>
            <td>
                @item[0].ToString()
            </td>
            
                @if (item[1].ToString().Contains("1"))
                {
                    <td>EVET</td>
                }
                else
                {
                    <td>HAYIR</td>
                }

            
            <td>
                @Html.ActionLink("Düzenle", "GrupTanimEdit", new { Grup = item["Grup"].ToString() }, new { @class = "btn btn-success btn-sm" })



                @Html.ActionLink("Sil", "GrupTanimDelete", new { Grup = item["Grup"].ToString() }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>


<script>
    $(document).ready(function () {
        $("#Delete").click(function (obj) {

            console.log(obj);


            if (confirm(document.getElementById + 'Silmek istediğinize emin misiniz?')) {
                // Save it!
                console.log('Thing was saved to the database.');
            } else {
                // Do nothing!

            }

        });
    });
</script>
