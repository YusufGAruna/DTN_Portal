
@{
    ViewBag.Title = "GrupTanimCreate";
}

<h2>Yeni Grup Tanımı</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Grup Adı", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("GrupAdi", TempData["Gruplar"] as List<SelectListItem>, htmlAttributes: new { @class = "form-control" })
            
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Fiyat Kitli", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IsChecked", new[] { new SelectListItem { Text = "Evet", Value = Boolean.TrueString }, new SelectListItem { Text = "Hayır", Value = Boolean.FalseString } }, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Geri Dön", "GrupKoduTanim", null, new { @class = "btn btn-primary" })
</div>


