@model IEnumerable<Aruna_DTN_Entegrasyon.Models.Kullanicilar>

@{
    ViewBag.Title = "Index";
}

<h2>Kullanıcılar</h2>

<br />
<p>
    @Html.ActionLink("Yeni Kullanıcı Oluştur", "Create",null, new { @class = "btn btn-info" })
</p>
<br />
<br />

<table class="table">
    <tr>
        <th>
            @Html.Label("Kullanıcı Kodu")
        </th>
        <th>
            @Html.Label("Kullanıcı Adı")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rol)
        </th>
        <th>
            @Html.Label("Iskonto Oranı")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KullaniciAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rol)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IskontoOran)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id = item.UserName }, new { @class = "btn btn-success btn-sm" })


            
            @Html.ActionLink("Sil", "Delete", new { id = item.UserName }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>


