@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>DTN İnşaat</h1>

    @if (Convert.ToBoolean(TempData["Admin"]))
    {
        @*<p><a href=/Admin/Index class="btn btn-primary btn-lg">Kullanıcılar &raquo;</a></p>*@
        @Html.ActionLink("Admin için Tanım Ekranları >>", "Index", "Admin", null, new { @class = "btn btn-primary" })
    }
    else
    {
        <p class="lead">Sipariş Listeleme, Rapor Görüntüleme gibi işlemlere aşağıdaki butonlara basarak ulaşabilirsiniz.</p>
        @*<p><a href=/Siparis/Index class="btn btn-primary btn-lg">Siparişler &raquo;</a></p>*@
        @Html.ActionLink("Siparişler >>", "Index", "Siparis", null, new { @class = "btn btn-primary" })
        <br />
        @Html.ActionLink("Teklifler >>", "Index", "Teklif", null, new { @class = "btn btn-primary" })
        <br />
        @Html.ActionLink("Satın Alma >>", "Index", "SaticiSiparis", null, new { @class = "btn btn-primary" })
        <br />
        @Html.ActionLink("Bloke Çöz >>", "Bloke", "Siparis", null, new { @class = "btn btn-primary" })
        <br />
        @Html.ActionLink("Raporlar >>", "Index", "Rapor", null, new { @class = "btn btn-primary" })
